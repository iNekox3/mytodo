<h1>My Tasks</h1>
<% @tasks.each do |task| %>
<p><%= task.taskname %>
<%= link_to "Mark as done", task_path(task),
                            method: :delete %>
</p>
<% end %>

<h1>Add A Task</h1>
<%= form_for :task, url: tasks_path do |f| %>
  <p>
    <%= f.text_field :taskname %>
  </p>

  <p>
    <%= f.submit "Add task" %>
  </p>
<% end %>
